# MarketSauce Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Firecrawl API (Web Research)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Stripe (Payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Database (Optional - defaults to SQLite for development)
DATABASE_URL=sqlite:///./marketsauce.db

# Application Settings
APP_ENV=development
APP_SECRET_KEY=your_random_secret_key_for_sessions_here
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_DIAGNOSTICS_PER_DAY=10
